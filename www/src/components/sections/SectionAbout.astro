---
interface Props {
  title?: string;
  text: string;
  points?: string[];
}

const {
  title = "À propos",
  text,
  points = [],
} = Astro.props;
---

<section class="py-16">
  <div class="max-w-5xl mx-auto px-4 grid gap-10 md:grid-cols-2 items-start">
    <div class="space-y-4">
      <h2 class="text-2xl sm:text-3xl font-semibold">
        {title}
      </h2>
      <p class="text-sm sm:text-base text-[var(--color-muted)] leading-relaxed">
        {text}
      </p>
    </div>

    {points.length > 0 && (
      <div class="card-elevated p-6 space-y-3">
        <h3 class="text-sm font-semibold">
          En résumé
        </h3>
        <ul class="text-sm text-[var(--color-muted)] space-y-2">
          {points.map((point) => (
            <li>• {point}</li>
          ))}
        </ul>
      </div>
    )}
  </div>
</section>
