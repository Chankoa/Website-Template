---
interface Service {
  title: string;
  description: string;
  highlight?: string;
}

interface Props {
  title?: string;
  intro?: string;
  services: Service[];
}

const {
  title = "Services",
  intro = "Une offre simple et lisible, pensée pour mettre en valeur votre activité.",
  services,
} = Astro.props;
---

<section class="py-16">
  <div class="max-w-5xl mx-auto px-4 space-y-8">
    <header class="max-w-2xl space-y-3">
      <h2 class="text-2xl sm:text-3xl font-semibold">
        {title}
      </h2>
      <p class="text-[var(--color-muted)] text-sm sm:text-base">
        {intro}
      </p>
    </header>

    <div class="grid gap-6 md:grid-cols-3">
      {services.map((service) => (
        <article class="card-elevated p-5 flex flex-col gap-3">
          <h3 class="text-base font-semibold">
            {service.title}
          </h3>
          {service.highlight && (
            <p class="text-xs uppercase tracking-[0.18em] text-[var(--color-muted)]">
              {service.highlight}
            </p>
          )}
          <p class="text-sm text-[var(--color-muted)]">
            {service.description}
          </p>
        </article>
      ))}
    </div>
  </div>
</section>
